<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h3>Hang on, we caught <%= pluralize(@contact.errors.count, "error") %>:</h3>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: 'Name' %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, placeholder: 'Email' %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, placeholder: 'Message' %>
  </div>
  <div class="actions">
    <%= f.submit "Send" %>
  </div>
<% end %>
