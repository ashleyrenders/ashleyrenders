<div class="new-post">
  <%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <h2>create an entry</h2>

    <div class="field">
      <%= f.text_field :title, placeholder: 'title', size: '30x1' %>
    </div>
    <div class="field">
      <%= f.text_field :img, placeholder: 'image url', size: '30x1' %>
    </div>
    <div class="field">
      <%= f.text_area :body, placeholder: 'body text', size: '30x3' %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
